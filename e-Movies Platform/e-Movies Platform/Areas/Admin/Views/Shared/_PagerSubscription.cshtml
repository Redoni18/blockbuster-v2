@model e_Movies_Platform.Models.Pager

<div class="d-flex justify-content-center container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (Model.CurrentPage <= 1)
            {
                <li class="page-item">
                    <a style="pointer-events: none; background: gray;" class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li>
                    <a style="pointer-events: none; background: gray;" class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }



            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                </li>
            }


            @if (Model.TotalItems > Model.PageSize * Model.CurrentPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)">Next</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="@(Model.TotalPages)">Last</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a style="pointer-events: none; background: gray;" class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)">Next</a>
                </li>
                <li>
                    <a style="pointer-events: none; background: gray;" class="page-link" asp-controller="Subscriptions" asp-action="Index" asp-route-pg="@(Model.TotalPages)">Last</a>
                </li>
            }


        </ul>
    }



</div>
