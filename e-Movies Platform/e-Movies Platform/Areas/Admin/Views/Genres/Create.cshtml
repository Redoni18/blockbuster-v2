@model e_Movies_Platform.Models.Genre

@{
    ViewData["Title"] = "Create";
}

<div class="w-50 offset-3">

    <div>
        <h1 class="text-center">Create Genre</h1>
    </div>
    <hr />
    <div class="row">
        <div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GenreName" class="control-label"></label>
                    <input required asp-for="GenreName" class="form-control" />
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary w-100 mt-2" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn mt-5 btn-info back-button" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
