@model e_Movies_Platform.ViewModels.CastCrewViewModel

@{
    ViewData["Title"] = "Create";
    
}

<div class="w-50 offset-3">

    <div>
        <h1 class="text-center">Add Cast&Crew</h1>
    </div>
    <hr />
    <div class="row">
        <div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input required asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                    <select required asp-for="RoleId" class="mt-2 form-select form-control">
                        @foreach (CastCrewRole role in Model.Roles)
                        {
                            <option value="@role.id">@role.Role</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary w-100 mt-2" />
                </div>
            </form>
        </div>

        </div>
            <a class="btn mt-5 btn-info back-button" asp-action="Index">Back to List</a>
        <div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
