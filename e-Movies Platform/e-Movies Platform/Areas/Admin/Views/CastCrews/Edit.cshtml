@model e_Movies_Platform.Models.CastCrew

@{
    ViewData["Title"] = "Edit";
}

<div class="w-50 offset-3">

    <h2 class="text-center">Edit @Model.Role</h2>

    <hr />
    <div class="row">
        <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input required asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary w-100 mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn mt-5 btn-info back-button" asp-action="Index">Back to List</a>
</div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
