@model e_Movies_Platform.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex gap-3">
    <div style="padding-top:40%; position:relative; width:60%">
        <iframe class="no-margin" style="position:absolute; left:0; top:0; width: 100%; height:100%;" src="@Model.MovieLink" frameborder="0" allow="autoplay" allowfullscreen>
        </iframe>
    </div>
    <div class="d-flex gap-2">
        <div>
            <img src="@Model.CoverImage"  style="width: 190px; height: 270px;"/>
        </div>
        <div style="width:300px; word-break:break-word;" class="d-flex flex-column">
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
            @foreach (CastCrew cast in Model.Cast)
            {
                if (cast.Role.Role.ToString().Equals("Director"))
                {
                    <p>Director: <span style="padding: 3px; border-radius: 4px; background: rgba(69, 165, 239, 0.2);">@cast.FullName</span></p>
                }
            }

            <p>Cast:
                @foreach (CastCrew cast in Model.Cast)
                {
                    if (cast.Role.Role.ToString().Equals("Actor"))
                    {
                        <span style="padding: 3px; border-radius: 4px; background: rgba(69, 165, 239, 0.2);">@cast.FullName</span> <span> </span>
                    }
                }
            </p>

            <p>
                Genre: <span style="padding: 3px; border-radius: 4px; background: rgba(69, 165, 239, 0.2);">@Model.Genre.GenreName</span>
            </p>
        </div>
    </div>
</div>